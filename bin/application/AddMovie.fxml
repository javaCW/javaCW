<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="361.0" prefWidth="500" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddMovieController">
   <children>
      <TextField fx:id="movieName" layoutX="66.0" layoutY="47.0" promptText="Movie Name" />
      <TextArea fx:id="movieDescription" layoutX="66.0" layoutY="91.0" prefHeight="93.0" prefWidth="200.0" promptText="Movie Description" />
      <TextArea fx:id="movieTimings" layoutX="66.0" layoutY="197.0" prefHeight="150.0" prefWidth="200.0" promptText="Movie Timings as coma seperated (i.e. 15:30, 17:00,etc)" />
      <Button layoutX="339.0" layoutY="159.0" mnemonicParsing="false" text="Browse" onAction="#uploadImages"/>
      <DatePicker fx:id="startDate" layoutX="279.0" layoutY="192.0" promptText="Start Date" />
      <DatePicker fx:id="endDate" layoutX="279.0" layoutY="224.0" promptText="End Date" />
      <Button fx:id="submitMovie" layoutX="320.0" layoutY="291.0" mnemonicParsing="false" text="Submit New Movie" onAction="#addMovieTransition"/>
      <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" layoutX="286.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
